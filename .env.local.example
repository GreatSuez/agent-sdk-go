# Local single-process defaults
AGENT_EXECUTION_MODE=local
AGENT_PROVIDER=ollama

# Ollama (no cloud key required)
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_API_KEY=

# State + DevUI
AGENT_STATE_BACKEND=sqlite
AGENT_SQLITE_PATH=./.ai-agent/state.db
AGENT_DEVUI_DB_PATH=./.ai-agent/devui.db

# Runtime behavior
AGENT_WORKFLOW=basic
AGENT_TOOLS=@default
AGENT_MAX_ITERATIONS=6
AGENT_MAX_OUTPUT_TOKENS=700
AGENT_OBSERVE_ENABLED=true
